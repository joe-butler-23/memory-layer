{
  "default_policy": "deny",
  "exec_mode_default": "permissive",
  "commands": {
    "ptt list": "read_only",
    "ptt list overdue": "read_only",
    "ptt list --done": "read_only",
    "ptt list --due": "read_only",
    "ptt list scheduled": "read_only",
    "ptt events": "read_only",
    "ptt week": "read_only",
    "ptt completion": "read_only",
    "ptt flow": "read_only",
    "ptt requests": "read_only",
    "ptt planning": "read_only",
    "ptt behaviour": "read_only",
    "ptt backlog": "read_only",
    "ptt review": "read_only",
    "ptt schema project": "read_only",
    "ptt create": "write",
    "ptt create-event": "write",
    "ptt complete": "write",
    "ptt update": "write",
    "ptt archive": "write",
    "ptt plan": "write",
    "ptt reschedule": "write",
    "ptt event": "write",
    "ptt item": "write",
    "ptt log": "write",
    "ptt add-note": "write",
    "mep sl sync plan --help": "read_only",
    "mep sl sync validate --help": "read_only",
    "mep sl sync rollback --help": "read_only",
    "mep recipe import-url --help": "read_only",
    "mep memory ingest --help": "read_only",
    "mep memory verify --help": "read_only",
    "mep memory autolearn --help": "read_only"
  },
  "prefix_rules": [
    {
      "prefix": "ptt op schema",
      "policy": "read_only"
    },
    {
      "prefix": "ptt show",
      "policy": "read_only"
    },
    {
      "prefix": "ptt list",
      "policy": "read_only"
    },
    {
      "prefix": "ptt context",
      "policy": "read_only"
    }
  ],
  "write_guarded_prefixes": [
    {
      "prefix": "ptt op run",
      "allowed_modes": ["plan"],
      "blocked_modes": ["apply"]
    }
  ],
  "blocked_patterns": [
    "rm ",
    "sudo ",
    "chmod ",
    "chown "
  ]
}
