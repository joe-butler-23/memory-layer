{
  "default_policy": "deny",
  "commands": {
    "ptt list": "read_only",
    "ptt list overdue": "read_only",
    "ptt list --done": "read_only",
    "ptt list --due": "read_only",
    "ptt list --sprint": "read_only",
    "ptt list scheduled": "read_only",
    "ptt list today": "read_only",
    "ptt events": "read_only",
    "ptt week": "read_only",
    "ptt completion": "read_only",
    "ptt flow": "read_only",
    "ptt requests": "read_only",
    "ptt planning": "read_only",
    "ptt behaviour": "read_only",
    "ptt backlog": "read_only",
    "ptt review": "read_only",
    "ptt schema project": "read_only",
    "ptt schema task": "read_only",
    "ptt schema event": "read_only",
    "ptt create": "write",
    "ptt create-event": "write",
    "ptt complete": "write",
    "ptt update": "write",
    "ptt archive": "write",
    "ptt pick": "read_only",
    "ptt notes": "read_only",
    "ptt plan": "write",
    "ptt work": "read_only",
    "ptt reschedule": "write",
    "ptt event": "write",
    "ptt item": "write",
    "ptt log": "write",
    "ptt add-note": "write",
    "ptt scan": "read_only"
  },
  "prefix_rules": [
    {
      "prefix": "ptt op schema",
      "policy": "read_only"
    },
    {
      "prefix": "ptt show",
      "policy": "read_only"
    },
    {
      "prefix": "ptt list",
      "policy": "read_only"
    },
    {
      "prefix": "ptt context",
      "policy": "read_only"
    },
    {
      "prefix": "infrastructure/scripts/",
      "policy": "read_only"
    }
  ],
  "write_guarded_prefixes": [
    {
      "prefix": "ptt op run",
      "allowed_modes": ["plan"],
      "blocked_modes": ["apply"]
    }
  ],
  "blocked_patterns": [
    "rm ",
    "sudo ",
    "chmod ",
    "chown "
  ]
}
